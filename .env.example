# Copy to .env and fill in values as needed

# OpenAI
OPENAI_API_KEY=your_api_key_here

# Monitoring / alerts
PROMOTED_MIN_COUNT=1
ALERTS_MAX_LINES=500
ALERT_WEBHOOK_URL=
ALERT_WEBHOOK_FORMAT=generic
ALERT_WEBHOOK_RETRIES=3
ALERT_WEBHOOK_BACKOFF_SEC=1.0

# Connector retry
CONNECTOR_RETRIES=3
CONNECTOR_BACKOFF_SEC=0.5
CONNECTOR_MAX_WAIT_SEC=30

# Optional: auto-create GitHub issues from promoted actions
AUTO_SYNC_PROMOTED_ISSUES=0
GITHUB_REPO=owner/repo
GITHUB_TOKEN=
GITHUB_ISSUE_LABELS=ai-starter,auto
GITHUB_ISSUE_ASSIGNEES=
GITHUB_ISSUE_PERIOD_LABELS=0
